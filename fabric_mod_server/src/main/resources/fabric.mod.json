{
  "schemaVersion": 1,
  "id": "chat_emotes",
  "version": "${version}",

  "name": "Chat Emotes",
  "description": "Server-Side chat emotes for Minecraft",
  "authors": [
    "Colin Tim Barndt"
  ],
  "contact": {
    "homepage": "https://github.com/ColinTimBarndt/fabric_chat-emotes",
    "sources": "https://github.com/ColinTimBarndt/fabric_chat-emotes",
    "issues": "https://github.com/ColinTimBarndt/fabric_chat-emotes/issues"
  },

  "license": "CC-BY-SA-4.0",
  "icon": "assets/chat_emotes/icon.png",

  "environment": "server",
  "entrypoints": {
    "server": [
      {
        "adapter": "kotlin",
        "value": "io.github.colintimbarndt.chat_emotes.ChatEmotesServerMod"
      }
    ]
  },
  "mixins": [
    "chat-emotes.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17",
    "fabric-language-kotlin": ">=1.8.2+kotlin.1.7.10"
  },
  "suggests": {}
}
