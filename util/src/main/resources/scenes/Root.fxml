<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ButtonBar?>
<TabPane fx:id="tabs" prefHeight="320.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="io.github.colintimbarndt.chat_emotes_util.fx.RootController"
         stylesheets="@/scenes/Theme.css">
    <Tab text="About">
        <BorderPane>
            <center>
                <ScrollPane>
                    <TextFlow fx:id="aboutText" BorderPane.alignment="CENTER">
                        <padding>
                            <Insets topRightBottomLeft="8"/>
                        </padding>
                    </TextFlow>
                </ScrollPane>
            </center>
            <bottom>
                <ButtonBar>
                    <buttons>
                        <Button onAction="#openGithub" styleClass="icon, github"/>
                    </buttons>
                </ButtonBar>
            </bottom>
        </BorderPane>
    </Tab>
</TabPane>
